<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>ReCLIne</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Generated by ReCLIne">
    <meta name="author" content="alixedi">
    <link href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>
    <div class="container">
        <h1>{{ prog.title() }}</h1>
        % if description:
            <p>{{ description }}</p>
        % end
        <hr>
        <form method="POST" action=".">
            % for group in _action_groups:
                <legend>{{ group.title.title() }}</legend>
                % for action in group._group_actions:
                    % from argparse import _HelpAction, _StoreAction, _StoreConstAction, _StoreTrueAction, _StoreFalseAction
                    % if not isinstance(action, _HelpAction):
                        <div class="form-group">
                            <label>{{ action.dest.title() }}</label>
                            <input class="form-control"  
                                {{ 'required' if action.required else '' }}
                                % if type(action) in [_StoreConstAction, _StoreTrueAction, _StoreFalseAction]:
                                    type = 'checkbox'
                                % elif type(action) == _StoreAction:
                                    % if action.type is int:
                                        type = 'number'
                                    % end
                                % end
                                id = '{{ action.dest }}'
                                name='{{ action.dest }}'
                                value='{{ action.default if hasattr(action.default, "__dict__") else "" }}' >
                            <br>
                            {{ action.help }}<br>
                        </div>    
                    % end
                % end
            % end
            <input type=submit value="Go" />
        </form>
        % if epilog:
            <p>{{ epilog }}</p>
        % end
    </div>      
  </body>
</html>
